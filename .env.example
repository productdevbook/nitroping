NITRO_PRESET=bun

# Database
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=nitroping
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nitroping

# JWT Secret (for API authentication)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# Or with OpenSSL: openssl rand -hex 64
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Configuration
PORT=3000
HOST=localhost

# Push provider configurations are stored per-app in the database
# No global defaults needed - each app has its own FCM/APNs/WebPush config

# Redis (for queue system - to be implemented)
REDIS_URL=redis://localhost:6379

# Email Configuration (for notifications about service)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Webhook Configuration (for delivery callbacks)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Or with OpenSSL: openssl rand -hex 32
WEBHOOK_SECRET=your-webhook-secret-for-delivery-callbacks

# Encryption Key (for sensitive data like private keys)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Or with OpenSSL: openssl rand -hex 32
ENCRYPTION_KEY=your-64-character-hex-encryption-key-change-this-in-production